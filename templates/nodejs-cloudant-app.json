{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
      "name": "nodejs-cloudant-app",
      "annotations": {
        "openshift.io/display-name": "Node.js + Cloudant App (BETA)",
        "description": "Create example Node.js application or provide your own app, with an IBM Cloudant database instance and binding.  This template is currently in Beta.",
        "tags": "quickstart,nodejs,ibm,cloudant",
        "iconClass": "icon-nodejs",
        "openshift.io/long-description": "The example application at https://github.com/IBM/nodejs-cloudant uses an IBM Cloudant database to store a list of names and display the database entries in real-time. For information about IBM Cloudant see https://www.ibm.com/cloud/cloudant. For more information about using this template, including OpenShift considerations, see https://github.com/IBM/nodejs-cloudant/blob/development/README.md",
        "openshift.io/provider-display-name": "IBM",
        "openshift.io/documentation-url": "https://github.com/IBM/nodejs-cloudant/blob/development/README.md",
        "openshift.io/support-url": "https://www.ibm.com/cloud/support"
      }
    },
    "message": "A Node.js app is being generated and the IBM Cloud Operator will provision an instance of Cloudant and bind it to your app. To view your deployment navigate to your project.",
    "labels": {
      "template": "nodejs-cloudant-app",
      "app": "nodejs-cloudant-app"
    },
    "objects": [
      {
        "kind": "Service",
        "apiVersion": "ibmcloud.ibm.com/v1alpha1",
        "metadata": {
          "name": "${NAME}"
        },
        "spec": {
          "plan": "${PLAN}",
          "serviceClass": "cloudantnosqldb"
        }
      },
      {
        "kind": "Binding",
        "apiVersion": "ibmcloud.ibm.com/v1alpha1",
        "metadata": {
          "name": "${NAME}"
        },
        "spec": {
          "serviceName": "${NAME}"
        }
      },
      {
        "kind": "Service",
        "apiVersion": "v1",
        "metadata": {
          "name": "${NAME}",
          "annotations": {
            "description": "Exposes and load balances the application pods"
          }
        },
        "spec": {
          "ports": [
            {
              "name": "web",
              "port": 3000,
              "targetPort": 3000
            }
          ],
          "selector": {
            "name": "${NAME}"
          }
        }
      },
      {
        "kind": "Route",
        "apiVersion": "v1",
        "metadata": {
          "name": "${NAME}"
        },
        "spec": {
          "to": {
            "kind": "Service",
            "name": "${NAME}"
          }
        }
      },
      {
        "kind": "ImageStream",
        "apiVersion": "v1",
        "metadata": {
          "name": "${NAME}",
          "annotations": {
            "description": "Keeps track of changes in the application image"
          }
        }
      },
      {
        "kind": "BuildConfig",
        "apiVersion": "v1",
        "metadata": {
          "name": "${NAME}",
          "annotations": {
            "description": "Defines how to build the application",
            "template.alpha.openshift.io/wait-for-ready": "true"
          }
        },
        "spec": {
          "source": {
            "type": "Git",
            "git": {
              "uri": "${GITHUB_REPO}",
              "ref": "${BRANCH}"
            }
          },
          "strategy": {
            "type": "Source",
            "dockerStrategy": {
                "dockerfilePath": "Dockerfile"
            }
          },
          "output": {
            "to": {
              "kind": "ImageStreamTag",
              "name": "${NAME}:latest"
            }
          },
          "triggers": [
            {
              "type": "ImageChange"
            },
            {
              "type": "ConfigChange"
            }
          ]
        }
      },
      {
        "kind": "DeploymentConfig",
        "apiVersion": "v1",
        "metadata": {
          "name": "${NAME}",
          "annotations": {
            "description": "Defines how to deploy the application server",
            "template.alpha.openshift.io/wait-for-ready": "true"
          }
        },
        "spec": {
          "strategy": {
            "type": "Rolling"
          },
          "triggers": [
            {
              "type": "ImageChange",
              "imageChangeParams": {
                "automatic": true,
                "containerNames": [
                  "${NAME}"
                ],
                "from": {
                  "kind": "ImageStreamTag",
                  "name": "${NAME}:latest"
                }
              }
            },
            {
              "type": "ConfigChange"
            }
          ],
          "replicas": 1,
          "selector": {
            "name": "${NAME}"
          },
          "template": {
            "metadata": {
              "name": "${NAME}",
              "labels": {
                "name": "${NAME}"
              }
            },
            "spec": {
              "containers": [
                {
                  "name": "${NAME}",
                  "image": "${NAME}",
                  "ports": [
                    {
                      "containerPort": 3000
                    }
                  ],
                  "env": [
                    {
                      "name": "CLOUDANT_URL", 
                      "valueFrom": {
                        "secretKeyRef" : {
                          "name" : "${NAME}",
                          "key" : "url"
                        }
                      }
                    }
                  ],
                  "readinessProbe": {
                    "timeoutSeconds": 3,
                    "initialDelaySeconds": 3,
                    "httpGet": {
                      "path": "/",
                      "port": 3000
                    }
                  },
                  "livenessProbe": {
                    "timeoutSeconds": 3,
                    "initialDelaySeconds": 30,
                    "httpGet": {
                      "path": "/",
                      "port": 3000
                    }
                  },
                  "resources": {
                    "limits": {
                      "memory": "${MEMORY_LIMIT}"
                    }
                  }
                }
              ]
            }
          }
        }
      }
    ],
    "parameters": [
      {
        "name": "NAME",
        "displayName": "Name",
        "description": "The name for application and associated objects. Lowercase letters, numbers, and '-' only.",
        "required": true,
        "value": "nodejs-cloudant-app",
        "from": "[a-z0-9-]{40}"
      },
      {
        "name": "PLAN",
        "displayName": "Cloudant Plan",
        "description": "IBM Cloudant plan type, enter 'lite' or 'standard', or 'dedicated-hardware'. Note: only one instance of a free 'lite' plan is allowed per account. View the service details page for pricing information: https://cloud.ibm.com/catalog/services/cloudant",
        "required": true,
        "value": "lite"
      },
      {
        "name": "GITHUB_REPO",
        "displayName": "GitHub Repository",
        "description": "Source code for OpenShift to build and deploy. Using the default value will deploy out of the box. To make changes, fork the template repository and paste that here instead.",
        "required": true,
        "value": "https://github.com/IBM/nodejs-cloudant.git"
      },
      {
        "name": "BRANCH",
        "displayName": "Branch Name",
        "description": "GitHub repo branch name, default is 'master'",
        "required": true,
        "value": "master"
      },
      {
        "name": "MEMORY_LIMIT",
        "displayName": "Memory Limit",
        "description": "Maximum amount of memory the container can use. Using the default value should work out of the box. You can modify this if you want to limit or extend the memory further.",
        "required": true,
        "value": "512Mi"
      }
    ]
  }